# Visual Site Designer (VSD) Environment Configuration
# Copy this file to .env and customize for your deployment

# Domain Configuration
DOMAIN=myvsd.mainul35.dev

# Cloudflare Tunnel Token
# Get this from Cloudflare Zero Trust dashboard after creating a tunnel
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# Database Configuration
DB_NAME=vsd-db
DB_PATH=/app/data

# Application Configuration
SERVER_PORT=8080
PLUGIN_DIRECTORY=/app/plugins

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=prod

# Cloudflare Proxy Headers (trust Cloudflare)
SERVER_FORWARD_HEADERS_STRATEGY=FRAMEWORK
SERVER_TOMCAT_REMOTEIP_REMOTE_IP_HEADER=CF-Connecting-IP
SERVER_TOMCAT_REMOTEIP_PROTOCOL_HEADER=X-Forwarded-Proto

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

# Security (Optional - for future authentication)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRATION=86400000

# CORS Configuration (if needed)
# CORS_ALLOWED_ORIGINS=https://myvsd.mainul35.dev

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=50MB
